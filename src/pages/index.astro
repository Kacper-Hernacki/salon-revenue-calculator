---
// Default route - show loading screen with language detection
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Salon Revenue Calculator - Loading...</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .loading-container {
      text-align: center;
      color: white;
      max-width: 400px;
      padding: 2rem;
    }

    .spinner {
      width: 60px;
      height: 60px;
      border: 4px solid rgba(255, 255, 255, 0.3);
      border-top: 4px solid white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 2rem;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    h1 {
      font-size: 1.8rem;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    p {
      font-size: 1rem;
      opacity: 0.9;
      line-height: 1.5;
    }

    .dots {
      animation: dots 1.5s infinite;
    }

    @keyframes dots {
      0%, 20% { content: '.'; }
      40% { content: '..'; }
      60%, 100% { content: '...'; }
    }
  </style>
</head>
<body>
  <div class="loading-container">
    <div class="spinner"></div>
    <h1>Salon Revenue Calculator</h1>
    <p>Detecting your preferred language<span class="dots">...</span></p>
  </div>

  <script>
    // Detect browser language and redirect
    function detectLanguage() {
      const supportedLangs = ['en', 'es', 'fr', 'pl', 'ar', 'ru', 'zh', 'it', 'ja'];
      const browserLang = navigator.language.toLowerCase().substr(0, 2);
      
      // Check if browser language is supported
      const targetLang = supportedLangs.includes(browserLang) ? browserLang : 'en';
      
      // Small delay for better UX
      setTimeout(() => {
        window.location.href = `/${targetLang}/`;
      }, 800);
    }

    // Start language detection
    detectLanguage();
  </script>
</body>
</html>